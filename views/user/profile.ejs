<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>
<div class="container">
    <div class="row mt-4">
        <div class="col-md-3">
            <img src="<%= '/images/' + user.avatar%>" height="150px" width="150px">

        </div>
        <div class="col-md-9">
            <h1 class="display-4">Profile </h1>
            <hr>

            <%- include('../partials/flashMessages') -%>
            <p class="display-4">
                <% if (user) { %>
                    <%= user.name%>&nbsp;<%= user.lastName%>
                <%}%>
            </p>
            <h6>
                <% if (user) { %>
                    Email : <%= user.email%>
                <%}%>
            </h6>
            <h6>
                <% if (user) { %>
                    Phone : <%= user.phone%>
                <%}%>
            </h6>
            <h6>
                <% if (user) { %>
                    Address : <%= user.address%>
                <%}%>
            </h6>
            <hr>
            <form action="/users/uploadAvatar" method="POST" enctype="multipart/form-data">
                <input type="file" name="avatar" id="avatar" onchange="readURL(this)">
                <button type="submit" class="btn btn-primary">Upload</button>
            </form>
            <hr>
            <h1 class="display-4">Image Preview</h1>
            <img src="#" alt="" id="imagePlaceholder" height="200px" width="200px" style="display: none;">
        </div>
    </div>
</div>

    
<%- include('../partials/footer') -%>
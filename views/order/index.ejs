<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>
<div class="container">
  <h2 class="card-text mt-5">You have only 2 hours to update or delete your order before it will be done</h2>
  <div class="row mt-3">
    <div class="col md-12">
      <%- include('../partials/flashMessages') -%>
    </div>

  </div>
  <% chunk.forEach((orders)=> {%>
  <div class="row mt-3">


    <% orders.forEach((order)=> {%>
    <div class="col-sm-6 col-md-4">
      <div class="card">

        <div class="card-body">
          <h5 class="card-title"><%= order.name%></h5>
          <p class="card-text"><%= order.orderBox%></p>
          <p><%= order.address%></p>
          <a href="<%= '/orders/show/' + order.id %>" class="btn btn-primary">Show More</a>
        </div>
      </div>
    </div>
    <%})%>
  </div>

  <%})%>
  <div class="row">
    <div class="col-12 mt-2 mb-4">
      <nav aria-label="...">
        <ul class="pagination pagination-lg justify-content-center">
          <% for (let i=1 ; i <= Math.ceil(total/5); i++) {%>

          <% if (pageNo == i) {%>
          <li class="page-item active"><a class="page-link" href="<%= '/orders/' + i%>"><%= i%></a></li>
          <%} else { %>
          <li class="page-item"><a class="page-link" href="<%= '/orders/' + i%>"><%= i%></a></li>
          <%}%>
        
        <%}%>
        </ul>
      </nav>
    </div>
  </div>
</div>


<%- include('../partials/footer') -%>